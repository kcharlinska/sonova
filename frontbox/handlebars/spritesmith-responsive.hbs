{{#block "sprites-comment"}}
/*
Sprite Responsive '{{spritesheet_info.strings.name}}'

{{#sprites}}
.{{name}}
{{/sprites}}

Style guide: Spritesmith.{{spritesheet_info.strings.name}}
*/
{{/block}}
{{#block "spritesheet"}}
@{{spritesheet_info.strings.name_width}}: {{spritesheet.px.width}};
@{{spritesheet_info.strings.name_height}}: {{spritesheet.px.height}};
@{{retina_spritesheet_info.strings.name_width}}: {{retina_spritesheet.px.width}};
@{{retina_spritesheet_info.strings.name_height}}: {{retina_spritesheet.px.height}};
{{/block}}

{{#sprites}}
.{{name}}{
padding-bottom: {{px.height}} /{{px.width}} * 100%;
background-image: url({{{escaped_image}}}2x);
background-size: ({{px.total_width}} / {{px.width}} * 100%) ({{px.total_height}} / {{px.height}} * 100%);
background-position: ({{px.offset_x}} / ({{px.total_width}} - {{px.width}}) * -100%) ({{px.offset_y}} /
({{px.total_height}} - {{px.height}}) * -100%);

@media @desktop {
background-image: url({{{escaped_image}}});
}
}
{{/sprites}}
